# -----------------------------
# REQUIRED FOR DEVELOPMENT
# -----------------------------

# Your computer's LOCAL IP for testing
# Example: 192.168.1.100
EXPO_PUBLIC_LOCAL_IP=YOUR_IP_HERE

# Backend port
EXPO_PUBLIC_BACKEND_PORT=8000

# -----------------------------
# GOOGLE OAUTH2 CONFIGURATION
# -----------------------------
# REQUIRED: Get from Google Cloud Console
# iOS Client  (for PKCE flow)

EXPO_PUBLIC_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_REDIRECT_URI=com.googleusercontent.apps.YOUR_CLIENT_ID:/oauth2redirect

# -----------------------------
# ENVIRONMENT
# -----------------------------
EXPO_PUBLIC_ENV=development

# -----------------------------
# PRODUCTION
# -----------------------------

# EXPO_PUBLIC_API_URL=https://api.gymshock.com
# EXPO_PUBLIC_GOOGLE_CLIENT_ID=<production-client-id>
# EXPO_PUBLIC_GOOGLE_REDIRECT_URI=<production-redirect-uri>
